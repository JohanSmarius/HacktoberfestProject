@model IEnumerable<Project>;
@{
	ViewData["Title"] = "Projects";
}

<h1>A list of OSS projects</h1>

<div>
	<ul>
		@foreach (var project in Model)
		{
			var url = $"https://github.com/{project.Owner}/{project.RepoName}";
			<li><a href="@url">@project.RepoName</a> by @project.Owner</li>
		}
	</ul>
	@if (User.Identity.IsAuthenticated)
	{
		@section Styles {
			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		}
		<a asp-area="" asp-controller="Projects" asp-action="Add">Add a project</a>
	}
	else
	{
		<p>Log in to add a project!</p>
	}
</div>
